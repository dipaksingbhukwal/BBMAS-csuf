<div class="card">
  <form action="/users/{{user.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="card-header">
        <h3><small>{{user.name}}</small></h3>
      <br>
        <h5 name="email"><small>{{user.email}}</small></h3>
    </div>

    <div class="card-body">
      <h5 class="card-title">Edit Profile:</h5>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="address" class="form-control form-control-sm" value="{{user.address}}" required>
      </div>
      <div class="form-group form-group-inline">
        <label for="website">Website</label>
        <input type="string" name="website" class="form-control form-control-sm" value="{{user.website}}" required>
      </div>
      <div class="form-group">
        <label for="contactno">Contact No:</label>
        <input type="tel" name="contactno" class="form-control form-control-sm" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{user.contactno}}" required>
      </div>
      <div class="form-group">
        <label for="fax">Fax No:</label>
        <input type="tel" name="fax" class="form-control form-control-sm" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{user.fax}}">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>


  </form>
</div>
